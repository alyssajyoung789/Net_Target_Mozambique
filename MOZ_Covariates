Population_2015.raster<-Pop.MOZ.raster
SMOD_2015.raster<-SMOD.MOZ.raster
Built_2014.raster<-Blt.MOZ.raster
rm(Pop.MOZ.raster,SMOD.MOZ.raster,Blt.MOZ.raster)

